{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
        "@/*": [
            "app/*"
        ],
      "*": [
        "./node_modules/tns-core-modules/*",
        "./node_modules/*"
      ]
    },
  },
   "exclude": [
    "**/*.tns.ts",
    "**/*.android.ts",
    "**/*.ios.ts",
    "**/*.spec.ts"
  ]
}
